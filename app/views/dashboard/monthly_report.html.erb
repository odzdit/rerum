<% if user_signed_in? %>
  <h1 class="dash-title">Hello <%= current_user.name %> Welcome to Your Dashboard:</h1>
 <% else %>
  <h1 class="dash-title">Nobody Logged In</h1>
 <% end %>
	<div class="row" id="graph-container">
    <div id="graph">
  	    <%= line_chart  @data, @options %>            
    </div>
    <div class="row text-center">    
        <strong>Clicks <%= check_box_tag 'Clicks', 'yes', false, class: 'clicks lead' %></strong>
        <strong>Impressions <%= check_box_tag 'Impressions', 'yes', false, class: 'Impressions lead' %></strong>
        <strong>Avg. CPC <%= check_box_tag 'Avg. CPC', 'yes', false, class: 'Avg. CPC lead' %></strong>
        <strong>Cost <%= check_box_tag 'Cost', 'yes', false, class: 'Cost lead' %></strong>
        <strong>CTR <%= check_box_tag 'CTR', 'yes', false, class: 'CTR lead' %></strong>
        <strong>Conversions <%= check_box_tag 'Conversions', 'yes', false, class: 'Conversions lead' %></strong>
        <strong>Conversion Rate <%= check_box_tag 'Conversion Rate', 'yes', false, class: 'Conversion Rate lead' %></strong>
        <strong>CPA <%= check_box_tag 'CPA', 'yes', false, class: 'CPA lead' %></strong>
    </div>
    <!-- 1st row of KPIs -->
	</div>
  <div class="row text-center">
    <div class="col-sm-3">
        <text class="kpi lead">clicks</text>
        <p class= "kpi-number"><strong><%= @clicks %></strong></p> 
    </div>
    <div class="col-sm-3">
        <text class="kpi lead">impressions</text>
        <p class= "kpi-number"><strong><%= @impressions %></strong></p>  
    </div>
    <div class="col-sm-3">
        <text class="kpi lead">ctr</text>
        <p class= "kpi-number">%<strong><%= @ctr %></strong></p> 
    </div>
    <div class="col-sm-3">
        <text class="kpi lead">cpc</text>
        <p class= "kpi-number">$<strong><%= @cpc  %></strong></p> 
    </div>
  </div>
    <!-- 2nd row of KPIs -->
    <div class="row text-center">
    <div class="col-sm-3">
          <text class="kpi lead">cost</text>
          <p class= "kpi-number">$<strong><%= @cost %></strong></p> 
      </div>
      <div class="col-sm-3">
          <text class="kpi lead">cpa</text>
          <p class= "kpi-number">$<strong><%= @cpa %></strong></p>  
      </div>
      <div class="col-sm-3">
          <text class="kpi lead">conversions</text>
          <p class= "kpi-number"><strong><%= @conversions  %></strong></p> 
      </div>
      <div class="col-sm-3">
          <text class="kpi lead">conv. rate</text>
          <p class= "kpi-number"><strong><%= @conv_rate  %></strong></p> 
      </div>
    </div>
